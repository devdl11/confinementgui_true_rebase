    "@testing-library/user-event": "^12.1.10",
    "autoprefixer": "^9.8.6",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.0.0",
    "electron-is-dev": "^1.2.0",
    "esm": "^3.2.25",
    "firebase": "^8.2.9",
